// 颜色变量 - 优化配色方案
$accentColor = #667eea
$textColor = #2c3e50
$borderColor = #e9ecef
$codeBgColor = #1e1e1e
$arrowBgColor = #ccc
$badgeTipColor = #667eea
$badgeWarningColor = #ffa726
$badgeErrorColor = #ef5350

// 扩展颜色系统
$primaryColor = #667eea
$secondaryColor = #764ba2
$successColor = #4caf50
$warningColor = #ff9800
$errorColor = #f44336
$infoColor = #2196f3

// 渐变色
$primaryGradient = linear-gradient(135deg, #667eea 0%, #764ba2 100%)
$cardGradient = linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%)
$heroGradient = linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%)

// 阴影系统
$shadowLight = 0 2px 8px rgba(0, 0, 0, 0.06)
$shadowMedium = 0 4px 16px rgba(0, 0, 0, 0.1)
$shadowHeavy = 0 8px 32px rgba(0, 0, 0, 0.15)
$shadowColor = rgba(102, 126, 234, 0.2)

// 布局变量
$navbarHeight = 3.6rem
$sidebarWidth = 20rem
$contentWidth = 740px
$homePageWidth = 960px

// 响应式断点
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px

// 覆盖默认主题的高对比度样式
@media (forced-colors: active) {
  // 搜索框组件样式调整
  .search-box input {
    forced-color-adjust: none;
    border-color: FieldText;
    background-color: Field;
  }

  // 导航栏链接颜色修正
  .nav-links a {
    forced-color-adjust: preserve-parent;
    color: LinkText !important;
  }

  // 全局文本颜色适配
  body {
    forced-color-adjust: auto;
    color: CanvasText;
    background-color: Canvas;
  }
}