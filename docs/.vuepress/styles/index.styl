// 自定义样式

// 图片样式
.content img {
  max-width: 500px;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin: 1rem 0;
}

// 响应式图片
@media (max-width: 768px) {
  .content img {
    max-width: 100%;
  }
}

// 修复中文标题锚点样式
.header-anchor {
  display: none !important;
}

// 优化标题样式
h1, h2, h3, h4, h5, h6 {
  position: relative;
}