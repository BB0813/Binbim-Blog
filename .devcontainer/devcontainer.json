{
  "name": "博客管理系统",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "forwardPorts": [8080, 3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "octref.vetur"
      ]
    }
  },
  "postCreateCommand": "cd /workspaces/blog && npm install && cd /workspaces/blog/server && npm install",
  "postStartCommand": "cd /workspaces/blog/server && npm run dev",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  }
}